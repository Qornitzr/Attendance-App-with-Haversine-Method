<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.EditProfileActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/bar_layout"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical"
        android:background="@color/colorPrimary">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:src="@drawable/potodefault"
            app:civ_border_color="@android:color/white"
            app:civ_border_width="2dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Klik To Change Picture"
            android:textColor="@color/colorBGText"
            android:gravity="center"
            android:textSize="11sp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/white_boarder">
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/txtNamaUser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="nama"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="40dp"
                android:textStyle="italic"
                android:inputType="textPersonName"
                android:textColor="@color/colorBGText"
                android:backgroundTint="@color/colorBGText"
                android:textColorHint="@color/colorBGText"/>
            <ImageView
                android:id="@+id/penEditNama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_edit"
                android:layout_gravity="right"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_boarder">
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/txtHandphoneUser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="hp"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="10dp"
                android:textStyle="italic"
                android:inputType="textPhonetic"
                android:textColor="@color/colorBGText"
                android:backgroundTint="@color/colorBGText"
                android:textColorHint="@color/colorBGText"/>
            <ImageView
                android:id="@+id/penEditHp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_edit"
                android:layout_gravity="right"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_boarder">
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/txtAlamatUser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="alamat"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="40dp"
                android:textStyle="italic"
                android:inputType="textPhonetic"
                android:textColor="@color/colorBGText"
                android:backgroundTint="@color/colorBGText"
                android:textColorHint="@color/colorBGText"/>
            <ImageView
                android:id="@+id/penEditAlamat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_edit"
                android:layout_gravity="right"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_gravity="center"
            android:background="@drawable/blue_boarder">
            <TextView
                android:id="@+id/tglLahir"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Tanggal Lahir"
                android:textStyle="bold|italic"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="@color/colorPrimary"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:background="@drawable/white_boarder">
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/txtNip"
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:text="nip"
                android:layout_marginStart="10dp"
                android:textStyle="italic"
                android:inputType="textPhonetic"
                android:textColor="@color/colorBGText"
                android:backgroundTint="@color/colorBGText"
                android:textColorHint="@color/colorBGText"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:background="@drawable/white_boarder">
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/txtEmail"
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:text="email"
                android:layout_marginStart="10dp"
                android:textStyle="italic"
                android:inputType="textPhonetic"
                android:textColor="@color/colorBGText"
                android:backgroundTint="@color/colorBGText"
                android:textColorHint="@color/colorBGText"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:background="@drawable/white_boarder">
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/txtJk"
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:text="Jenis Kelamin"
                android:layout_marginStart="10dp"
                android:textStyle="italic"
                android:inputType="textPhonetic"
                android:textColor="@color/colorBGText"
                android:backgroundTint="@color/colorBGText"
                android:textColorHint="@color/colorBGText"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:background="@drawable/white_boarder">
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/txtJabatan"
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:text="jabatan"
                android:layout_marginStart="10dp"
                android:textStyle="italic"
                android:inputType="textPhonetic"
                android:textColor="@color/colorBGText"
                android:backgroundTint="@color/colorBGText"
                android:textColorHint="@color/colorBGText"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:background="@drawable/white_boarder">
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/txtGolongan"
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:text="golongan"
                android:layout_marginStart="10dp"
                android:textStyle="italic"
                android:inputType="textPhonetic"
                android:textColor="@color/colorBGText"
                android:backgroundTint="@color/colorBGText"
                android:textColorHint="@color/colorBGText"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:background="@drawable/white_boarder">
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/txtImage"
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:text="golongan"
                android:layout_marginStart="10dp"
                android:textStyle="italic"
                android:inputType="textPhonetic"
                android:textColor="@color/colorBGText"
                android:backgroundTint="@color/colorBGText"
                android:textColorHint="@color/colorBGText"/>
        </FrameLayout>
        <TextView
            android:id="@+id/gantiPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ganti Password?"
            android:textColor="@color/colorSecondPrimary"
            android:layout_marginTop="20dp"
            android:textSize="19sp"
            android:textStyle="italic"
            android:gravity="center_horizontal"/>
        <Button
            android:id="@+id/btnSave"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:text="Save"
            android:textStyle="italic"
            android:textSize="25sp"
            android:background="@color/colorSecondPrimary"
            android:textColor="#ffffff"/>
    </LinearLayout>
</RelativeLayout>